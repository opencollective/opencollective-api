    <tr><th valign="top">Private note:</th><td>{{{expense.privateMessage}}}</td></tr>
  {{/if}}
</table>

<br />
<br />

<center>
  {{> expenseItems items=items}}
  <br /><br />
  <p>
    <center>
      <a href="{{config.host.website}}/{{collective.slug}}/expenses/{{expense.id}}" class="btn blue">
        <div>View Expense</div>
      </a>
    </center>
  </p>

</center>

