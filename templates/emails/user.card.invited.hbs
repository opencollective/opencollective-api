{{#if customMessage}}
  <table style="width: 100%; border: 1px solid #e8edee; border-radius: 6px; padding: 1em;">
    <tbody>
      <tr>
        <td>
          <center>
            {{> collectivecard emitter}}
          </center>
        </td>
        <td>
          <center>
            <blockquote style="font-style: italic; color: grey; font-size: 16px;">
