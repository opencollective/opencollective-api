<style>
  .CollectiveCard {
    vertical-align: top;
    position: relative;
    box-sizing: border-box;
    display: inline-block;
    width: 170px;
    height: auto !important;
    min-height: 220px;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 0 1px 3px 0 rgba(45, 77, 97, 0.1);
    border: 1px solid rgba(45, 77, 97, 0.1);
    margin: 0px 6px 8px 2px;
    overflow: hidden;
    text-decoration: none !important;
    font-family: Helvetica, sans-serif;
  }

  .CollectiveCard-head {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100px;
    border-bottom: 3px solid #46b0ed;
    background-size: cover;
    background-position: center;
  }

  .CollectiveCard-head img {
    margin: 20px auto;
    max-width: 150px;
    height: auto;
    max-height: 64px;
  }

  .CollectiveCard-body {
    padding: 10px 0px;
  }

  .CollectiveCard-name,
  .CollectiveCard-description {
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .CollectiveCard-name {
    font-size: 16px;
    font-weight: 300;
    text-align: center;
    color: #303233;
    margin: 5px;
    white-space: nowrap;
  }

  .CollectiveCard-description {
    height: 50px;
    font-size: 12px;
    font-weight: normal;
    line-height: 1.44;
    text-align: center;
    color: #787d80;
    margin: 0 5px;
  }

  .CollectiveCard-footer {
    width: 100%;
    height: 45px;
    border-top: 1px solid #f2f2f2;
  }

  .CollectiveCard-metric {
    float: left;
    width: 50%;
    margin: 9px 0px;
  }

  .CollectiveCard-metric-value {
    font-size: 16px;
    font-weight: normal;
    text-align: center;
    color: #303233;
  }

  .CollectiveCard-metric-label {
    font-size: 8.5px;
    text-align: center;
    margin: 1px;
    color: #a8afb3;
    text-transform: uppercase;
  }

  .SponsoredCard-footer {
    border-top: solid 1px #e1e9ed;
    padding: 10px;
    text-align: center;
  }

  .SponsoredCard-type {
    min-height: 13px;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 1px;
    color: #75cc1f;
    text-transform: uppercase;
  }

  .SponsoredCard-amount {
    min-height: 18px;
    font-size: 12px;
    font-weight: 400;
    line-height: 1.5;
    text-align: center;
    color: #303233;
    text-transform: capitalize;
  }
</style>

<div class="CollectiveCard">
  <a href="https://opencollective.com/{{slug}}">
    <div>
      <div class='CollectiveCard-head' style="background-image:url('{{resizeImage backgroundImage width=320 defaultImage="/public/images/collectives/default-header-bg.jpg"}}');">
        <center><img src="{{resizeImage image width=240}}" height="64" /></center>
      </div>
      <div class='CollectiveCard-body'>
        <div class='CollectiveCard-name'>{{name}}</div>
        <div class='CollectiveCard-description'>{{description}}</div>
      </div>
      {{#if totalDonations}}
      <div class='SponsoredCard-footer'>
        <div class='SponsoredCard-type'>{{tier}}</div>
        <div class='SponsoredCard-amount'>{{currency totalDonations currency=currency}}</div>
      </div>
      {{/if}}
      {{#if yearlyIncome}}
      <div class='CollectiveCard-footer'>
        <div class='clearfix mt2'>
          <div class='CollectiveCard-metric'>
            <div class='CollectiveCard-metric-value'>{{contributorsCount}}</div>
            <div class='CollectiveCard-metric-label'>{{pluralize "contributor" n=contributorsCount}}</div>
          </div>
          <div class='CollectiveCard-metric'>
            <div class='CollectiveCard-metric-value'>{{currency yearlyIncome currency=currency precision=0}}</div>
            <div class='CollectiveCard-metric-label'>annual budget</div>
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </a>
</div>